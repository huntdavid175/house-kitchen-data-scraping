# Database Configuration (AWS Free Tier RDS)
DB_HOST=your-db.xxxxx.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=recipe_db
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Environment
NODE_ENV=production
DB_SSL=true

# AWS Region
AWS_REGION=us-east-1  # Choose the region closest to you

# Resource Limits (t2.micro compatible)
MAX_CONCURRENT_SCRAPES=2
SCRAPE_INTERVAL=5000  # 5 seconds between scrapes

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium 